<div>
    <main>
        <div>
            <h1>{{name}}</h1>
        </div>
        <br />
        <div>
            Birth Date: <date>{{birthdate}}</date>
        </div>
        <br />
        <div>
            <address>Birth Place: {{birthplace}}</address>
        </div>
        <br />
        <div>
            Death Date: <date>{{deathdate}}</date>
        </div>
        <br />
        <div>
            <address>Death Place: {{deathplace}}</address>
        </div>
        <br />
        <div>Nationality: {{nationality}}</div>
        <br />
        <div>Occupation: {{occupation}}</div>
        <br />
        <hr />
        <section>
            <div>
                <div>
                    <b>Known for:</b>
                    <ul>
                        {{#each known_for}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Notable publications:</b>
                    <ul>
                        {{#each notable_publications}}
                        <li>
                            {{title}},
                            <date>{{year}}</date>,
                            {{publisher}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Partners:</b>
                    <ul>
                        {{#each partners}}
                        <li>
                            {{name}},
                            {{relationship}},
                            <date>{{years}}</date>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Awards:</b>
                    <ul>
                        {{#each awards}}
                        <li>
                            {{title}},
                            <date>{{year}}</date>,
                            {{description}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Influences:</b>
                    <ul>
                        {{#each influences}}
                        <li>
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Influenced:</b>
                    <ul>
                        {{#each influenced}}
                        <li>
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Quotes:</b>
                    <ul>
                        {{#each quotes}}
                        <li>
                            <q>{{this}}</q>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Major discoveries:</b>
                    <ul>
                        {{#each major_discoveries}}
                        <li>
                            {{title}},
                            <date>{{year}},</date>
                            {{description}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <div>
                    <b>Contributions:</b>
                    <ul>
                        {{#with contributions}}
                        <li>
                            {{title}},
                            {{description}},
                            <date>{{year}}</date>,
                            {{field}}
                        </li>
                        {{/with}}
                    </ul>
                </div>
                <br>
            </div>
        </section>
    </main>
</div>

