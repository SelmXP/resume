<div>
    {{#with main}}
    <main>
        <section>
            {{> title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each work}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}}
                            -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <br>

                        <div>{{> link text=company.name href=company.url blank=true noLine=true }}</div>

                        <br>
                        <br>

                        <div><strong>Projects ({{projectAmount}})</strong></div>

                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true }}</div>

                                <br>

                                <div>
                                    <p>
                                        {{about}}
                                    </p>
                                </div>

                                <br>

                                <div>
                                    <em>Project stacks</em>
                                </div>

                                <br>

                                <div>
                                    <p>
                                        {{stacks}}
                                    </p>
                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>

        </section>


    </main>
    {{/with}}
</div>