<div>
    {{#with main}}
    <main>
        <section class="ps-0">
            {{> title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each work}}
                    <li class="mb-3">
                        <div class="mb-3">{{position}}</div>

                        <div class="mb-3">
                            {{duration.from}}
                            -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <div class="mb-5">
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true }}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>

                        <div class="mb-3"><strong>Projects ({{projectAmount}})</strong></div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div class="mb-3">{{> link text=name href=url blank=true noLine=true }}</div>

                                <div class="mb-3">
                                    <p>
                                        {{about}}
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>

                                <div class="mb-3">
                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class="mb-3">
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>

                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    </li>

                    {{/each}}
                </ul>
            </div>

        </section>


    </main>
    {{/with}}
</div>