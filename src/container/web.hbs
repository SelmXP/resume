{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with web}}
    <main>
        <div>
            <h1>Web</h1>
        </div>
        <section>

            <div>
                <h2>Languages:</h2>
                {{#each languages}}
                <ul>
                    <li>
                        {{name}}, ver:{{version}}, ({{description}})<br>

                        {{#if elements}}
                        <h3>Elements</h3>
                        {{#each elements}}
                        <ul>
                            <li>
                                {{name}}, ({{description}})<br>
                                <b>Attributes:</b><br>
                                {{#each attributes}}
                                <ul>
                                    <li>
                                        {{name}}, ({{description}})
                                    </li>
                                </ul>
                                {{/each}}
                            </li>
                            <br>
                        </ul>
                        {{/each}}
                        {{/if}}

                        {{#if properties}}
                        <h3>Properties</h3>
                        {{#each properties}}
                        <ul>
                            <li>
                                {{name}}, ({{description}})<br>
                                <b>Values:</b><br>
                                {{#each values}}
                                <ul>
                                    <li>
                                        {{value}}, ({{description}})<br>
                                    </li>
                                </ul>
                                {{/each}}
                            </li>
                            <br>
                        </ul>
                        {{/each}}
                        {{/if}}
                        <br>

                        {{#if functions}}
                        <h3>Functions</h3>
                        {{#each functions}}
                        <ul>
                            <li>
                                {{name}}, ({{description}})<br>
                                <b>Parameters:</b><br>
                                {{#each parameters}}
                                <ul>
                                    <li>
                                        {{name}}, {{type}}, ({{description}})<br>
                                    </li>
                                </ul>
                                {{/each}}
                            </li>
                            <br>
                        </ul>
                        {{/each}}
                        {{/if}}

                    </li>
                    <hr>
                </ul>
                {{/each}}
            </div>

        </section>
    </main>
    {{/with}}
</div>

