<main>
    <section>
        {{#with formBlock}}
        <div class="row">
            <div class="col-8 pe-0">
                <h1 class="mb-3">{{header}}</h1>
                {{#with rating}}
                <p> {{title}}: {{value}} </p>
                {{/with}}
                {{#with actionBlock}}
                <div id="actionBlock">
                    <ul class="nav nav-tabs nav-fill">
                        {{#each tabs}}
                        <li class="nav-item">
                            {{#if isActive}}<a class="nav-link active" aria-current="page" href="#"><b>{{text}}</b></a>
                            {{else}}<a class="nav-link" aria-current="page" href="#">{{text}}</a>{{/if}}
                        </li>
                        {{/each}}
                    </ul>
                    <hr class="mx-0 mt-5 mb-5">
                    {{#with report}}
                    <div class="card">
                        <div class="card-body">
                            <p class="mb-2">{{title}}</p>
                            <a href="{{button.link}}" target="_blank"
                                class="my-1 me-2 btn btn-secondary">{{button.text}}</a>
                        </div>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
                <hr class="border border-dark border-1 mx-0 mt-5 mb-4">

                {{#with feedbackBlock}}
                <div id="feedbackBlock">
                    <h2 class="my-5">{{title}}</h2>
                    {{#each buttons}}
                    {{> shopButtons blank=true}}
                    {{!-- <a href="{{link}}" target="_blank" class="my-1 me-2 btn 
                        {{#if isSuccess}}btn-success{{/if}} 
                        {{#if isWarning}}btn-warning{{/if}}
                        {{#if isOutline}}btn-outline-success{{/if}}
                        {{#if isDanger}}btn-danger{{/if}}">{{text}}</a> --}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
            {{#with goodsInfo}}
            <div id="goodsInfo" class="col-4">
                <div class="card mb-3">
                    <div class="card-body pb-0">
                        <div class="card mx-0" style="width: 8rem;">
                            <img src={{photo}} class='card-img' />
                        </div>
                        <h5 class="my-2"> {{name}} </h5>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5>{{price}}</h5>
                        <p class="my-2">{{#if inMarket}}Є
                            {{else}}Немає{{/if}} в наявності
                        </p>
                        {{#each buttons}}
                        <p class="m-0 p-0">
                            {{> shopButtons blank=true}}
                        </p>
                        {{/each}}
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        {{seller.title}}: {{seller.value}}
                    </div>
                </div>

            </div>
            {{/with}}
        </div>
        {{/with}}
        <hr class="border border-dark border-1 mx-0 mt-5 mb-5">
        {{#each reviewList}}
        {{> reviewItem}}
        {{/each}}

        {{> shopService}}
        {{!-- {{#with service}}
        <div class='card text-bg-success text-center'>
            <div class='card-body p-2'>
                <div class='card-title'>
                    <h2>{{title}}</h2>
                </div>
                <p class='card-text my-1'>{{description}}</p>
                {{#each buttons}}
                <a href='{{link}}' class='btn btn-primary mx-0 my-1' target='_blank'>{{text}} </a>
                <br />
                {{/each}}
            </div>
        </div>
        {{/with}} --}}

    </section>
    <hr class="mx-3 mt-5 mb-0">
</main>