{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    <main>
        <section>
            {{> title data=name big=true}}
            <hr>

            <div>
                <div class="card text-center mb-3">
                    <div class="card-header">
                        {{> title data="Users:"}}
                    </div>
                    <div class="card-body text-start">
                        <ul>
                            {{#each users}}
                            <li>
                                <div class="btn-group mb-3">
                                    <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        {{name}}
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <b>id:</b> {{id}}<br />
                                                <b>name:</b> {{name}}<br />
                                                <b>gender:</b> {{gender}}<br />
                                                <b>age:</b> {{age}}<br />
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                {{#if friends}}
                                <p class="m-0"><b>Friends:</b></p>
                                <ul>
                                    {{#each friends}}
                                    <li>
                                        <div class="btn-group mb-3">
                                            <button type="button" class="btn btn-info dropdown-toggle"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                {{name}}
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <b>id:</b> {{id}}<br />
                                                        <b>name:</b> {{name}}<br />
                                                        <b>gender:</b> {{gender}}<br />
                                                        <b>age:</b> {{age}}<br />
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        {{#if mutual_friends}}
                                        <p class="m-0"><b>Mutual Friends:</b></p>
                                        <ul class="mb-3">
                                            {{#each mutual_friends}}
                                            <li>
                                                <div class="btn-group mb-3">
                                                    <button type="button" class="btn btn-info dropdown-toggle"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                        {{name}}
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="#">
                                                                <b>id:</b> {{id}}<br />
                                                                <b>name:</b> {{name}}<br />
                                                                <b>gender:</b> {{gender}}<br />
                                                                <b>age:</b> {{age}}<br />
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                {{#if mutual_friends}}
                                                <p class="m-0"><b>Mutual Friends:</b></p>
                                                <ul>
                                                    {{#each mutual_friends}}
                                                    <li>
                                                        <div class="btn-group mb-3">
                                                            <button type="button" class="btn btn-info dropdown-toggle"
                                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                                {{name}}
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li>
                                                                    <a class="dropdown-item" href="#">
                                                                        <b>id:</b> {{id}}<br />
                                                                        <b>name:</b> {{name}}<br />
                                                                        <b>gender:</b> {{gender}}<br />
                                                                        <b>age:</b> {{age}}<br />
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </li>
                                                    {{/each}}
                                                </ul>
                                                {{/if}}
                                            </li>
                                            {{/each}}
                                        </ul>
                                        {{/if}}
                                    </li>
                                    {{/each}}

                                </ul>
                                {{/if}} {{!-- friends --}}


                                {{#if groups}}
                                <b>Groups:</b>
                                <ul>
                                    {{#each groups}}
                                    <li class="mb-3">
                                        <div class="btn-group mb-3">
                                            <button type="button" class="btn btn-primary  dropdown-toggle"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                {{name}}
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <b>id:</b> {{id}}<br />
                                                        <b>name:</b> {{name}}<br />
                                                        <b>description:</b> {{description}}<br />
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>

                                        <p class="m-0"><b>Members</b></p>
                                        <ul>
                                            {{#each members}}
                                            <li>
                                                <div class="btn-group mb-3">
                                                    <button type="button" class="btn btn-info dropdown-toggle"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                        {{name}}
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="#">
                                                                <b>id:</b> {{id}}<br />
                                                                <b>name:</b> {{name}}<br />
                                                                <b>gender:</b> {{gender}}<br />
                                                                <b>age:</b> {{age}}<br />
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </li>

                                            {{/each}}
                                        </ul>
                                    </li>

                                    {{/each}}
                                </ul>

                                {{/if}}
                                <hr />
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
