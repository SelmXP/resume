{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <header>
    <div>
      <h1>{{name.firsname}} {{name.lastname}}</h1>
    </div>
    <div>
      <b>{{position}}</b>
    </div>
    <br />
    <div>
      <em>{{salary}}</em>
    </div>
    <br />
    <hr />
  </header>

  <main>
    <section>
        {{> title data=summary.title}}
      <div>
        <p>
          {{{summary.text}}}
        </p>
      </div>
    </section>

    {{#with experience}}
      <section>
        {{> title data=title}}
        <div>
          <p>
            {{text}}
          </p>
        </div>
      </section>
    {{/with}}
  </main>

  <footer>
    <hr />
    <br />
    {{#with social}}

        {{> link data=email}} / 
        {{> link data=phone}} / 
        {{> link data=linkedin}} 
    
    {{/with}}
  </footer>

</div>
