{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <header>
    <div>
      <h1>{{name.firsname}} {{name.lastname}}</h1>
    </div>
    <div>
      <b>{{position}}</b>
    </div>
    <br />
    <div>
      <em>{{salary}}</em>
    </div>
    <br />
    <hr />
  </header>

  <main>
    <section>
      <div>
        <h2>{{summary.title}}</h2>
      </div>
      <div>
        <p>
          {{{summary.text}}}
        </p>
      </div>
    </section>

    {{#with experience}}
      <section>
        <div>
          <h2>{{title}}</h2>
        </div>
        <div>
          <p>
            {{text}}
          </p>
        </div>
      </section>
    {{/with}}
  </main>

  <footer>
    <hr />
    <br />
    <a href='mailto:dmytro@mail.com'>dmytro@mail.com</a>
    /
    <a href='tel:+380670000123'>+380670000123</a>
    /
    <a
      href='https://www.linkedin.com/in/dmytro-test'
      target='_blank'
    >LinkedIn</a>
  </footer>

</div>

