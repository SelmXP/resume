{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
    {{#with page_header}}
    <div>
        <h1 class='text-center'>{{title}}</h1>
        <p class='text-center text-uppercase'>{{description}}</p>
    </div>
    {{/with}}
    {{#with section}}
    <div>
        <div class='card'>
            {{#with about_us}}
            <div class='card-body'>
                <div class='display-6 text-end'><b>{{title_list.main}}</b></div><br>
                <div class='text-end'>
                    <h2>{{title_list.sub}}</h2>
                </div><br>
                <button type='button' class='btn btn-outline-info'>{{button.text}}</button>
            </div>
            {{/with}}
        </div>
        <br>
        <div class='card'>
            {{#with advantage}}
            <div class='card-body'>
                <div class='display-5 text-body-secondary'><b>{{ title}}</b></div><br>
                <div class='card'>
                    {{#with efficiency}}
                    <div class='card-body'>
                        <div class='display-4  text-body-secondary'><b>{{title}}</b></div><br>
                        <h6>{{sub_title}}</h6><br>
                        <p>{{description}}</p><br>
                        <button type='button' class='btn btn-outline-warning'>{{button}}</button>
                    </div>
                    {{/with}}
                </div>
                <br>
                <div class='card'>
                    {{#with innovation}}
                    <div class='card-body'>
                        <div class='display-4 text-center text-body-secondary'><b>{{title}}</b> </div> <br>
                        <h6 class='text-center'>{{sub_title}}</h6><br>
                        <p class='text-center'>{{description}}</p><br>
                        <button type='button' class='btn btn-outline-warning'>{{button}}</button>
                    </div>
                    {{/with}}
                </div>
                <br>
                <div class='card'>
                    {{#with collaboration}}
                    <div class='card-body'>
                        <div class='display-4 text-end  text-body-secondary'><b>{{title}}</b> </div> <br>
                        <h6 class='text-end'>{{sub_title}}</h6><br>
                        <p class='text-end'>{{description}}</p><br>
                        <button type='button' class='btn btn-outline-warning'>{{button}}</button>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}{{!-- advantage --}}
        </div>
        <br />
        <div class='card'>
            {{#with agreement}}
            <div class='card-body'>
                <div class='display-5'><b>{{title}}</b></div><br>
                {{#with info}}
                <div class='card'>
                    <div class='card-body'>
                        <h5>{{sub_title}}</h5><br>
                        <div class='card'>
                            <div class='card-body'>
                                <p>{{detail.text}}</p>
                                <button type='button' class='btn btn-success'>{{detail.button}}</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}{{!-- agreement --}}
        </div>
    </div>
    {{/with}} {{!-- section --}}
</main>
{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}